<h1>Editing Book</h1>

<%= form_for(@review) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title, class:"book_title" %>
  <h4>Body</h4>
  <%= f.text_area :body, class:"book_body" %></br>
    
  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to("Show", review_path(@review), class:"show_#{@review.id}") %> |
<%= link_to("Back", reviews_path, class:"back") %>
