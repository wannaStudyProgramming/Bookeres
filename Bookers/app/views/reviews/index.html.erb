<h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @reviews_all.each do |review| %>
  <tr>
    <td><%= review.title %></td>
    <td><%= review.body %></td>
    <td><%= link_to("show", review_path(review), class:"show_#{review.id}") %></td>
    <td><%= link_to("edit", edit_review_path(review), class:"edit_#{review.id}") %></td>
    <td><%= link_to("destroy", review_path(review), method: :delete, "data-confirm" => "Are you sure?", class:"destroy_#{review.id}") %></td>
  </tr>
  <% end %>
</table>

  

  
<h2>New Book</h2>
<!-- form_for部分 -->
<%= form_for(@review_new) do |f| %>

<h4>Title</h4>
<%= f.text_field :title, class:"book_title" %>

<h4>Body</h4>
<%= f.text_area :body, class:"book_body" %></br>

<%= f.submit 'Create Book' %>

<% end %>